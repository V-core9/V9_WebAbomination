datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id        Int      @id @default(autoincrement())
  slug      String?  @unique
  title     String
  content   String?
  published Boolean?  @default(false)
  author    User?    @relation(fields: [authorId], references: [id])
  created   DateTime @default(now())
  updated   DateTime @default(now())
  revision  Boolean? @default(false)
  authorId  Int?
}

model Page {
  id        Int      @id @default(autoincrement())
  slug      String?  @unique
  title     String
  content   String?
  published Boolean?  @default(false)
  author    User?    @relation(fields: [authorId], references: [id])
  created   DateTime @default(now())
  updated   DateTime @default(now())
  revision  Boolean? @default(false)
  authorId  Int?
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  username  String?
  password  String
  pages Page[]
  posts Post[]
}
