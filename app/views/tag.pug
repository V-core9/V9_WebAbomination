extends layout

block content
  content
    section
      header
        h1 # #{data.title}
      content
        h4 Slug:
          span #{data.slug}
        h4 Created:
          span #{data.createdAt}
        h4 Updated:
          span #{data.createdAt}

    section(class='inline_list')
      header
        h2 Pages with this tag.
      content
        ul
          each val in data.pages
            li
              a(href='/'+val.slug) #{val.title}

    section(class='inline_list')
      header
        h2 Related posts with this tag.
      content
        ul
          each val in data.posts
            li
              a(href='/blog/'+val.slug) #{val.title}

