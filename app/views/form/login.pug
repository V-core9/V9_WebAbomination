extends ../layout

block content
  content

    form(action="http://localhost:2000/auth/login", method="POST", id="login_form", autocomplete="off" )

      header
        h1 Login Form
        icon 🔐

      content

        group
          label 📧 Email
          input(type='email', name='email', placeholder='Email', required)

        group
          label 🔑 Password
          input(type='password', name='password', placeholder='Password', required)

        group(class='inline')
          input(type='checkbox', name='perm_login', value='perm_login', )
          label  Stay signed in.

        input(type='submit', name='submit', value='Login')

      footer
        info(class='info_circle') i
        p Don't have an account? Register <a href='/register'>here</a>

    script(src='/scripts/login.js')
