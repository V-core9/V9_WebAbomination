extends ../layout

block content
  content

    form(action="http://localhost:2000/user/", method="POST", id="register_form", autocomplete="off")

      header
        h1 User Register Form
        icon 📑

      content
        group
          label 👤 Username
          input(type='text', name='username', placeholder='Username', autocomplete='off', required)

        group
          label 📧 Email
          input(type='email', name='email', placeholder='Email', autocomplete='off', required)

        group
          label 🔑 Password
          input(type='password', name='password', placeholder='Password', autocomplete='off', required)

        group
          label 🔐 Confirmation Password
          input(type='password', name='passwordConfirm', placeholder='Confirmation Password', autocomplete='off', required)

        group(class='inline')
          input(type='checkbox', name='terms', value='terms', required)
          label  Accept Terms and Conditions

        input(type='submit', name='submit', value='Register')

      footer
        info(class='info_circle') i
        p Already have an account? Login <a href='/login'>here</a>

    script(src='/scripts/register.js')
